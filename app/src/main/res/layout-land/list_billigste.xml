<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/stasjonContainer"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:gravity="center">
        <ImageView
            android:id="@+id/stasjonIcon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="6dp"
            android:layout_gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/infoStasjon"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/stasjonContainer">

        <TextView
            android:id="@+id/navnTekst"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:textColor="#444"
            android:textSize="20dp"
            android:typeface="sans"
            android:singleLine="true"
            android:gravity="center"/>

        <TextView
            android:id="@+id/prisTekst"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#666"
            android:textSize="16dp"
            android:typeface="sans"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/distTekst"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="#666"
            android:textSize="14dp"
            android:typeface="sans"
            android:singleLine="true"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/direFelt"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_alignEnd="@+id/infoStasjon">
        <ImageView
            android:id="@+id/dire"
            android:contentDescription="Vis pÃ¥ kart"
            android:src="@drawable/ic_direction"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</RelativeLayout>